<div class='row'>
  <div class='col-6'>
    <form id='blogpost-form'>
      <h1 class='h3 mb-3 fw-normal'>Create Blog Post</h1>

      <div class='form-floating'>
        <input type='text' class='form-control' id='blog-title' placeholder='title' autocomplete='off' />
        <label for='blog-title'>Title</label>
      </div>
      <div class='form-floating'>
        <textarea class='form-control' id='blog-content' placeholder='placeholder'>
        </textarea>
        <label for='blog-content'>Contents</label>
      </div>
      <button class='w-100 btn btn-lg btn-primary' type='submit'>Create Blog Post</button>
    </form>
  </div>

  <div class='col-6'>
    <ol class='list-group list-group-numbered'>
      {{#each blogposts}}
      <li class='list-group-item d-flex justify-content-between align-items-start'>
        <div class='ms-2 me-auto'>
          <div class='fw-bold'>{{this.title}}</div>

        </div>
        <button data-id={{this.id}} class='btn btn-danger'>Delete</button>
      </li>
      {{/each}}
    </ol>
  </div>
</div>

<script src='/dashboard.js'></script>